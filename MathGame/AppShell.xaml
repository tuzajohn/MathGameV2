<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MathGame.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MathGame.src.Presentation.Pages"
    xmlns:auth="clr-namespace:MathGame.src.Presentation.Pages.AuthenticationPages"
    Shell.FlyoutBehavior="Disabled"
    Title="MathGame">

    <ShellContent
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="main" />

    <FlyoutItem Title="Cats"
                Icon="cat.png">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate local:PlaygroundPage}" />
        </Tab>
    </FlyoutItem>
    
</Shell>
